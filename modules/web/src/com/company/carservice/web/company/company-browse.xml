<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd" caption="msg://browseCaption"
        focusComponent="companiesTable" messagesPack="com.company.carservice.web.company">
    <data readOnly="true">
        <collection id="companiesDc" class="com.company.carservice.entity.Company" view="_local">
            <loader id="companiesDl">
                <query><![CDATA[select e from carservice_Company e]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="companiesTable" spacing="true">
        <filter id="filter" applyTo="companiesTable" dataLoader="companiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="companiesTable" width="100%" dataContainer="companiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="email"/>
                <column id="phone"/>
                <column id="inn"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="companiesTable.create"/>
                <button id="editBtn" action="companiesTable.edit"/>
                <button id="removeBtn" action="companiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
